<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenue au cinÃ©ma !"
        android:layout_centerHorizontal="true"
        android:id="@+id/welcome"
        android:paddingBottom="15dp" />

    <ImageView
        android:id="@+id/picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cinema"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"/>

    <Button
        android:text="Afficher les acteurs"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/btAppel"
        android:layout_marginTop="200dp"
        />

    <Button
        android:text="Afficher les films"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:id="@+id/btAppelFilm"
        android:layout_below="@id/btAppel"
        />

    <TextView
        android:id="@+id/rechercheFilm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rechercher un film :"
        android:layout_below="@id/btAppelFilm"
        android:layout_alignParentEnd="true"/>

    <Spinner
        android:id="@+id/films"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        />

    <Button
        android:id="@+id/rechercher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/films"
        android:text="Ok" />

</RelativeLayout>